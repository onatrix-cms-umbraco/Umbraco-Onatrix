@using Umbraco.Cms.Core.Models
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage


@{
	Layout = "mainLayout.cshtml";

		var selection = Umbraco.Content(Guid.Parse("305bdcf0-0a52-4df2-8971-9bfabfc6e746"))
    .ChildrenOfType("projectItemTemplate")
    .Where(x => x.IsVisible());
}

@await Html.PartialAsync("partials/static/breadcrumb.cshtml")

        <div class="container">
          <div class="wrapper-aside-right">
            <section id="project-contents">

@foreach (var item in selection)
{
    var image = item.Value<IPublishedContent>("thumbnailImage");
    var imageUrl = image != null ? image.GetCropUrl(width: 370, height: 200, imageCropMode: ImageCropMode.Crop, imageCropAnchor: ImageCropAnchor.Center) : "";
    var preamble = item.Value<string>("preamble") ?? "";
    var date = item.Value<DateTime?>("date"); 
    var formattedDate = date.HasValue ? date.Value.ToString("MMMM dd, yyyy") : "No date available";
		
    <div class="project-content">
        <div class="img-container">
            <img src="@imageUrl" alt="">
        </div>
        <div class="text-container">
            <h4>@item.Name</h4>
            <div class="date-container">
                <i class="fa-light fa-calendar-days"></i>
                <p>@formattedDate</p>
            </div>
            <p>@preamble</p>
            <a href="@item.Url()">Read more <span><i class="fa-solid fa-arrow-right"></i></span></a>
        </div>
    </div>
}
	</section>
	<aside>
		<div class="vl-line"></div>
		<div class="content">
		<div class="tags">
			<h4>Tags</h4>
			<a href="" class="btn-tag-light">Report</a>
			<a href="" class="btn-tag-light">Busines plans</a>
			<a href="" class="btn-tag-light">Insights</a>
			<a href="" class="btn-tag-light">Business</a>
			<a href="" class="btn-tag-light">App</a>
			<a href="" class="btn-tag-light">Project</a>
			<a href="" class="btn-tag-light">Finance</a>
			<a href="" class="btn-tag-light">Pricing</a>
		</div>
		<div class="help-us-card bg-primary">
			<h3>How can we help you?</h3>
			<p>online support 24/7, we are here to help you</p>
			<form action="">
			<input type="email" placeholder="E-mail address">
			</form>
		</div>
		</div>
	</aside>
	</div>
</div>

